#!/bin/bash
# This script is for local development
# The release bin script is generated by the gradle build

dir=$(dirname $0)

BASE_CLUSTER_DIR="$(dirname "$dir")"

EASY_CASS_LAB_USER_DATA=~/.easy-cass-lab/

JAR=$(find ${BASE_CLUSTER_DIR}/build/libs -name 'easy-cass-lab-*-all.jar' | sort | tail -n 1)

VERSION=$(grep '^version' gradle.properties | cut -d '=' -f2)

java -Deasycasslab.version=$VERSION -jar $JAR "$@"

